<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Title>Jais App Packager</Title>
        <AssemblyName>jap</AssemblyName>
        <PackageId>Jais.App.Packager</PackageId>
        <Authors>Julian Baumann</Authors>
        <RepositoryUrl>https://github.com/carsten-computer-club/JaisAppPackager</RepositoryUrl>

        <PackAsTool>true</PackAsTool>
        <ToolCommandName>jap</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>

    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CliFx" Version="2.2.2" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
    </ItemGroup>

</Project>
